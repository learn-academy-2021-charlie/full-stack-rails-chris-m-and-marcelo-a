<h2> Add a Blog Post </h2>
    <%= form_with model: @blog, local: true do |form|%>
        <%= form.label :title %>
        <%= form.text_field :title %>
        <br>
        <br>
        <%= form.label :content %>
        <%= form.text_field :content %>
        <br>
        <br>
        <%= form.submit 'Add Blog' %>
    <% end %>
    <h4> <%= link_to 'Back Home', blogs_path %> </h4>